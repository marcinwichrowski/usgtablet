<Window x:Class="USG_tablet_UI.SettingsGeneralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsGeneralWindow" Height="1280" Width="280"
        ResizeMode="NoResize" 
        WindowStyle="None"
        BorderBrush="Black"
        BorderThickness="0" 
        Deactivated="Window_Deactivated" >
    <Grid>
        <Image HorizontalAlignment="Left" Height="1280" Margin="0,0,-520,0" VerticalAlignment="Top" Width="280" Source="pack://application:,,,/gfx/settingsSide.png"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="30,130,0,0" VerticalAlignment="Top" Width="181" Height="44" Click="btnClose_Click" Opacity="0"/>
        <Button x:Name="btnProfile" Content="Button" HorizontalAlignment="Left" Margin="18,23,0,0" VerticalAlignment="Top" Width="207" Opacity="0" Height="77" Click="btnProfile_Click"/>
    </Grid>
</Window>
