<Page x:Class="USG_tablet_UI.Urzadzenia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1280" d:DesignWidth="800"
	Title="Urzadzenia">

    <Grid>
        <Image HorizontalAlignment="Left" Height="1280" Margin="0,0,0,0" VerticalAlignment="Top" Width="800" Source="pack://application:,,,/gfx/badanie.png"/>
        <Image x:Name="imgVideo" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="800" Margin="0,120,0,0"/>
        <Button x:Name="btnFreeze" Content="" HorizontalAlignment="Left" Margin="329,964,0,0" VerticalAlignment="Top" Width="148" Height="141" Click="btnFreeze_Click" Opacity="0"/>
        <Button x:Name="btnGainUp" HorizontalAlignment="Left" Margin="254,872,0,0" VerticalAlignment="Top" Width="68" Height="70" Click="btnGainUp_Click" Opacity="0"/>
        <Button x:Name="btnGainDown" Content="GAIN DOWN" HorizontalAlignment="Left" Margin="254,1129,0,0" VerticalAlignment="Top" Width="68" Height="70" Click="btnGainDown_Click" Opacity="0"/>
        <Label x:Name="lblGain" Content="" HorizontalAlignment="Left" Margin="28,558,0,0" VerticalAlignment="Top" Width="84" Height="34" HorizontalContentAlignment="Center" FontFamily="Lato" FontSize="18" Foreground="#DDFFFFFF"/>
        <Button x:Name="btnDepthUp" Content="GAIN UP" HorizontalAlignment="Left" Margin="484,872,0,0" VerticalAlignment="Top" Width="68" Height="70" Opacity="0" Click="btnDepthUp_Click" RenderTransformOrigin="-1.853,0.621"/>
        <Button x:Name="btnDepthDown" Content="GAIN UP" HorizontalAlignment="Left" Margin="484,1129,0,0" VerticalAlignment="Top" Width="68" Height="70" Opacity="0" Click="btnDepthDown_Click"/>
        <Button x:Name="btnSaveImage" HorizontalAlignment="Left" Margin="93,678,0,0" VerticalAlignment="Top" Width="120" Height="109" Opacity="0" Click="btnSaveImage_Click"/>
        <Button x:Name="btnEndExam" HorizontalAlignment="Left" Margin="674,23,0,0" VerticalAlignment="Top" Width="116" Height="82" Opacity="0" Click="btnEndExam_Click"/>
        <Label x:Name="lblDepth" Content="" HorizontalAlignment="Left" Margin="146,558,0,0" VerticalAlignment="Top" Width="166" Height="34" Foreground="#DDFFFFFF" HorizontalContentAlignment="Center" FontSize="18" FontFamily="Lato"/>
        <Label x:Name="lblPreset" Content="1" HorizontalAlignment="Left" Margin="658,558,0,0" VerticalAlignment="Top" Width="84" Height="34" FontFamily="Lato" FontSize="18" Foreground="#DDFFFFFF" HorizontalContentAlignment="Center"/>
        <Label x:Name="lblTx" Content="" HorizontalAlignment="Left" Margin="405,558,0,0" VerticalAlignment="Top" Width="139" Height="34" Foreground="#DDFFFFFF" HorizontalContentAlignment="Center" FontSize="18" FontFamily="Lato"/>
        <Button x:Name="btnSettings" HorizontalAlignment="Left" Margin="-4,23,0,0" VerticalAlignment="Top" Width="116" Height="82" Opacity="0" Click="btnSettings_Click"/>
        <Button x:Name="btnMeasure" HorizontalAlignment="Left" Margin="344,678,0,0" VerticalAlignment="Top" Width="133" Height="109" Opacity="0" Click="btnMeasure_Click"/>

    </Grid>
</Page>
